pipeline {
    agent any
    environment {
        DOCKERHUB_CREDENTIALS = 'dockerhub-creds'
        DOCKERHUB_USERNAME = 'aaamiiit'
        IMAGE_NAME = "${DOCKERHUB_USERNAME}/cd-app"
        KUBECONFIG = '/var/lib/jenkins/.kube/config'
        DEPLOYMENT_STRATEGY = 'canary' // or canary
        NEW_COLOR = 'blue' // or green
        OLD_COLOR = 'green' // or blue
        CANARY = 'stable'  // small
    }
    stages{
        stage('Checkout') {
            steps {
                checkout scm
            }
        }

        stage('Unit Tests') {
            steps {
                sh '''
                    cd cd-sessions/app
                    python3 -m venv venv
                    . venv/bin/activate
                    pip install --no-cache-dir -r requirements.txt

                    python -c "import server; print('Server module imported successfully')"
                '''
            }
        }

        stage('Build Docker Image') {
            steps {
                script {
                    def commitID = sh(script: "git rev-parse --short HEAD", returnStdout: true).trim()
                    env.IMAGE_TAG = commitID
                }
                sh '''
                    whoami
                    id
                    cd cd-sessions
                    docker build -t ${IMAGE_NAME}:${IMAGE_TAG} -f dockerfile/Dockerfile .
                '''
            }
        }
        stage('Push Docker Image') {
            steps {
                withCredentials([usernamePassword(credentialsId: DOCKERHUB_CREDENTIALS, passwordVariable: 'DOCKERHUB_PASS', usernameVariable: 'DOCKERHUB_USER')]) {
                    sh '''
                        echo $DOCKERHUB_PASS | docker login -u $DOCKERHUB_USER --password-stdin
                        docker push ${IMAGE_NAME}:${IMAGE_TAG}
                        docker logout
                    '''
                }
            }
        }

        stage('Update Kubernetes Manifests for Staging') {
            steps {
                sh '''
                    cd cd-sessions/kubernetes/staging
                    sed -i "s|replace-this-version|${IMAGE_TAG}|g" deployment.yaml
                '''
            }
        }

        stage('Deploy to Staging') {
            steps {
                sh '''
                    echo "Deploying to staging environment"
                    cd cd-sessions/kubernetes/staging
                    kubectl apply -f deployment.yaml -n app-staging
                    kubectl apply -f service.yaml -n app-staging

                    echo "Waiting for deployment to stabilize..."
                    kubectl rollout status deployment/cd-demo-staging -n app-staging --timeout=120s

                '''
            }
        }

        stage('Smoke test on staging'){
            steps {
                script {
                    def url = sh(script: "minikube service cd-demo-staging -n app-staging --url", returnStdout: true).trim()
                    echo "Staging url: ${url}"

                    sh """
                        for i in \$(seq 1 5); do
                            echo "request \$i:"
                            curl -s ${url} || exit 1
                            sleep 2
                        done
                    """
                }
            }
        }

        stage ("manual approval for production deployment") {
            steps {
                timeout(time: 1, unit: 'MINUTES') {
                    input message: "Deploy ${env.IMAGE_TAG} to Production using ${DEPLOYMENT_STRATEGY} strategy?"
                }
            }
        }

        stage('Update Kubernetes Manifests for Production') {
            steps {
                sh '''
                    cd cd-sessions/kubernetes/production
                    sed -i "s|replace-this-version|${IMAGE_TAG}|g" deployment-${NEW_COLOR}.yaml
                    sed -i "s|replace-this-version|${IMAGE_TAG}|g" deployment-canary-${CANARY}.yaml
                '''
            }
        }

        stage("deployment to production - blue-green"){
            when {
                expression { env.DEPLOYMENT_STRATEGY == 'bluegreen' }
            }
            steps {
                script {
                    if (env.NEW_COLOR != 'blue' && env.NEW_COLOR != 'green') {
                        error "Invalid NEW_COLOR value: ${env.NEW_COLOR}. It must be either 'blue' or 'green'."
                    }

                    sh '''
                        echo "Applying ${NEW_COLOR} deployment to production"
                        cd cd-sessions/kubernetes/production
                        kubectl apply -f deployment-${NEW_COLOR}.yaml -n app-production

                        echo "Waiting for ${NEW_COLOR} deployment to stabilize..."
                        kubectl rollout status deployment/cd-demo-${NEW_COLOR} -n app-production --timeout=120s

                        echo "applying base service"
                        kubectl apply -f service.yaml -n app-production

                        echo "Switching traffic to ${NEW_COLOR} deployment"
                        kubectl patch service cd-demo-bluegreen -n app-production -p '{"spec":{"selector":{"color":"'"${NEW_COLOR}"'"}}}'

                        echo "Scaling down old version deployment"
                        kubectl scale deployment cd-demo-${OLD_COLOR} --replicas=1 -n app-production

                    '''
                }
            }
        }

        stage("deployment to production - canary"){
            when {
                expression { env.DEPLOYMENT_STRATEGY == 'canary' }
            }
            steps {
                sh """
                    echo "Applying canary deployment to production"
                    cd cd-sessions/kubernetes/production
                    kubectl apply -f deployment-canary-${CANARY}.yaml -n app-production

                    echo "Waiting for canary deployment to stabilize..."
                    kubectl rollout status deployment/cd-demo-canary-${CANARY} -n app-production --timeout=120s

                    echo "applying base service"
                    kubectl apply -f service.yaml -n app-production

                    echo "Traffic will be split between stable and canary versions based on service configuration."

                """
            }
        }

        stage('Smoke test on Production'){
            when {
                expression { env.DEPLOYMENT_STRATEGY == 'bluegreen' }
            }
            steps {
                script {
                    def prod_url = sh(script: "minikube service cd-demo-bluegreen -n app-production --url", returnStdout: true).trim()
                    echo "Production url: ${prod_url}"

                    sh """
                        for i in \$(seq 1 5); do
                            echo "request \$i:"
                            curl -s ${prod_url} || exit 1
                            sleep 2
                        done
                    """
                }
            }
        }

        stage('Smoke test on Production- canary'){
            when {
                expression { env.DEPLOYMENT_STRATEGY == 'canary' }
            }
            steps {
                script {
                    def prod_url = sh(script: "minikube service cd-demo-canary -n app-production --url", returnStdout: true).trim()
                    echo "Production url: ${prod_url}"

                    sh """
                        for i in \$(seq 1 5); do
                            echo "request \$i:"
                            curl -s ${prod_url} || exit 1
                            sleep 2
                        done
                    """
                }
            }
        }

    }
    post {
        always {
            cleanWs()
        }
}   
}